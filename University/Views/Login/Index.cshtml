@model  University.Models.LoginModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section banner{
    <div class="site-section ftco-subscribe-1 site-blocks-cover pb-4" style=" background-image: url('../../Assets/client/images/bg_1.jpg');">
        <div class="container">
            <div class="row align-items-end">
                <div class="col-lg-7">
                    <h2 class="mb-0">Login</h2>
                    <p>Lorem ipsum dolor sit amet consectetur adipisicing.</p>
                </div>
            </div>
        </div>
    </div> }
<div class="site-section">
    <div class="container">

        <div class="row justify-content-center">
            <div class="col-md-5">
                @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                {
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" });
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control form-control-user", @autofocus = "autofocus" })
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control form-control-user" })
                    </div>
                    <div class="form-group">
                        @Html.CheckBoxFor(model => model.RememberMe)Remember Me
                    </div>
                    <button type="submit" class="btn btn-lg btn-success btn-block">Login</button>
                    <hr>
                }

            </div>
        </div>
    </div>
</div>

