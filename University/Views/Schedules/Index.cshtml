@model IEnumerable<Model.EF.Schedule>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section banner{
    <div class="site-section ftco-subscribe-1 site-blocks-cover pb-4" style=" background-image: url('../../Assets/client/images/bg_1.jpg');">
        <div class="container">
            <div class="row align-items-end">
                <div class="col-lg-7">
                    <h2 class="mb-0">Schedules</h2>
                    <p>Lorem ipsum dolor sit amet consectetur adipisicing.</p>
                </div>
            </div>
        </div>
    </div> }
<div class="site-section">
    <div class="container">
        <div class="row">
            <table class="table">
                <tr>
                    <th>
                        Date
                    </th>
                    <th>
                        Class Name
                    </th>
                    <th>
                        Subject Name
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <th>
                            @Html.DisplayFor(modelItem => item.Class.Name)
                        </th>
                        <td>
                            @Html.DisplayFor(modelItem => item.Subject.Name)
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>


